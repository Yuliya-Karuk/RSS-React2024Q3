{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@models/*": ["models/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"]
    },
    "strict": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCase",
          "customMatcher": "\\.module\\.scss$"
        }
      }
    ],
    "types": ["@types/node", "@types/react", "@types/react-dom"]
  },
  "include": [
    "pages",
    "next-env.d.ts",
    "index.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.ts",
    "**/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
