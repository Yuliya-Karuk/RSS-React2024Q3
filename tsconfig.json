{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "preserve"
    // "baseUrl": ".",
    // "paths": {
    //   "@components/*": ["src/components/*"],
    //   "@assets/*": ["src/assets/*"],
    //   "@contexts/*": ["src/contexts/*"],
    //   "@utils/*": ["src/utils/*"],
    //   "@router/*": ["src/router/*"],
    //   "@pages/*": ["src/pages/*"],
    //   "@models/*": ["src/models/*"],
    //   "@hooks/*": ["src/hooks/*"],
    //   "@store/*": ["src/store/*"]
    // }
    ,
    "strict": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "pages",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
